			<th><%= f.label :fec_grab %></th>
			<td><%= f.text_field :fec_grab, :disabled => true %></td>
		</tr>
		<tr>
			<th><%= f.label :hor_grab %></th>
			<td><%= f.text_field :hor_grab, :disabled => true %></td>
		</tr>
		<tr>
			<th><%= f.label :usr_grab %></th>
			<td><%= f.text_field :usr_grab, :disabled => true %></td>
		</tr>
		<tr>
			<th><%= f.label :wks_grab %></th>
			<td><%= f.text_field :wks_grab, :disabled => true%></td>
		</tr>
		<tr>
			<th><%= f.label :tip_grab %></th>
			<td><%= f.text_field :tip_grab, :disabled => true %></td>
		</tr>
		<tr>
			<th><%= f.label :observaciones %></th>
			<td><%= f.text_area :observaciones, :size => '40x2', :disabled => boton == 'Show' %></td>
		</tr>
		<tr>
			<th><%= f.label :id %></th>
			<td><%= f.text_field :id, :disabled => true %></td>
		</tr>
	</table>
	<p>
		<% if boton == 'Show' %>
			<%= link_to 'Editar', edit_proveedor_path(@proveedor) %> |
			<%= link_to 'Listar', proveedores_path %>
		<% else %>
			<%= f.submit boton, :disabled => permiso?(boton == 'Crear' ? 'A' : 'M') %> |
			<%= link_to 'Cancelar', proveedores_path %>
		<% end %>
	</p>
